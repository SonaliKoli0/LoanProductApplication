	// }
	// catch (SQLException e) {
	// throw e;
	// }
	// catch (Exception e) {
	// throw e;
	// }
	// return stmt;
	// }
	static public void close(Statement stmt) {
		try {
			if (stmt != null) {
				stmt.close();
			}
		} catch (Exception e) {
		}
	}

}